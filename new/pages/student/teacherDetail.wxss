/* pages/student/teacherDetail.wxss */

.top_layout {
  width: 100%;
  padding-top: 20px;
  padding-bottom: 20px;
  background: #7647a0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.back{
  width: 24px;
  height: 24px;
  position:absolute;
  left:10px;
}

.image {
  width: 60px;
  height: 60px;
  margin-top: 20px;
  border-radius: 30px;
  border-color: white;
}

.name {
  font-size: 21px;
  color: white;
  margin-top: 20px;
}

.info {
  color: white;
  font-size: 15px;
  margin-left:10px;
}

.info_layout {
  float: right;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.score {
  position: absolute;
  right: 20px;
  top: 80px;
  color: white;
  height: 60px;
  width: 60px;
  border-radius: 30px;
  background: #268746;
  float: right;
  text-align: center;
  line-height: 60px;
  font-size: 21px;
}

.top_item_layout {
  width: 100%;
  margin-top: 10px;
  flex-direction: column;
  align-items: center;
}

.top_item {
  float: left;
  width: 30.5%;
  margin: 1%;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 1px solid white;
  border-radius: 5px;
}

.top_item_number {
  color: white;
  font-size: 21px;
}

.top_item_name {
  color: white;
  font-size: 15px;
}

/* ------ */

.navbar {
  height: 80rpx;
  display: flex;
  z-index: 500;
  width: 100%;
  flex-direction: column;
  align-items: center;
}

.nav_layout {
  position: absolute;
  width: 100%;
  display: flex;
}

.navbar__item {
  display: block;
  flex: 1;
  padding: 10rpx 0;
  text-align: center;
  font-size: 0;
  height: 80rpx;
  line-height: 80rpx;
}

.navbar__item_on {
  color: #7647a0;
}

.navbar__slider {
  position: absolute;
  display: block;
  content: " ";
  left: 0;
  bottom: 0;
  height: 3px;
  background-color: #7647a0;
  transition: transform 0.3s;
}

.navbar__title {
  display: inline-block;
  font-size: 15px;
  max-width: 8em;
  text-align: center;
}


swiper-item {
  width: 100%;
  padding-top: 20rpx;
}

.intro_container{
  display: flex;
  padding: 10px;
  flex-direction: column;
  width: 100%;
}

.intro_container2{
  width: 100%;
  display: flex;
  padding: 10px;
  flex-direction: column;
}

.comment_item{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.comment_top_layout{
  width: 100%;
  height: 60px;
  display: flex;
}

.comment_item_image{
  margin: 10px;
  width: 40px;
  height: 40px;
  float: left;
}

.comment_item_name{
  line-height: 20px;
  margin-top: 10px;
}

.comment_item_time{
  line-height: 18px;
  margin-top: 5px;
  font-size: 13px;
  color: gray;
}

.comment_item_content{
  /* width: 100%; */
  line-height: 20px;
  padding: 10px;
  background: white;
  font-size: 15px;
}

.bottom_btn{
  width: 100%;
  height: 50px;
  line-height: 50px;
  background: #268746;
  color: white;
  text-align: center;
  position: fixed;
  bottom: 0px;
  left: 0px;
  z-index: 1000000;
}
